generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Principal {
  id Int @id @default(autoincrement())
  produto Produto?

  dataHora String
  quantidadeHora String
  unidadeHora String
  quantidadeMes String
  unidadeMes String
  preco String
  tipoContrato String
  tendencia String?
  status String
}

model Produto {
  id Int @id @default(autoincrement())
  submercado String
  energia String
  periodicidade String
  dataInicial String
  dataFinal String?
  tipo String

  principal Principal?  @relation(fields: [principalId], references:[id])
  principalId Int? @unique
}
